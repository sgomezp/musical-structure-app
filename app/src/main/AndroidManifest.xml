<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistsActivity"
            android:theme="@style/ArtistsTheme"
            android:label="@string/category_artist">
        </activity>

        <activity
            android:name=".AlbumsActivity"
            android:theme="@style/AlbumsTheme"
            android:label="@string/category_albums">
        </activity>



        <activity
            android:name=".SongsActivity"
            android:theme="@style/SongsTheme"
            android:label="@string/category_songs">
        </activity>

        <activity
            android:name=".ArtistsSongsNamesActivity"
            android:theme="@style/SongsTheme"
            android:label="@string/label_artist_songs_name">
        </activity>



    </application>

 </manifest>